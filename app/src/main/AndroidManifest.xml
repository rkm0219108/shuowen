<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.rkm.tdd.shuowen">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".ShuowenApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.BookVolumeListActivity"
            android:label="@string/img_book"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".activity.BookImageListActivity"
            android:label=""
            android:parentActivityName=".activity.BookVolumeListActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".activity.BookImageActivity"
            android:label=""
            android:parentActivityName=".activity.BookImageListActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".activity.WordDetailActivity"
            android:label=""
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>
</manifest>
